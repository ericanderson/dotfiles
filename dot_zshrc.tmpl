export PATH="$PATH:$HOME/.local/bin"

alias claude="$HOME/.claude/local/claude"

# Source 1Password plugins if available
if [ -f $HOME/.config/op/plugins.sh ]; then
    source $HOME/.config/op/plugins.sh
fi
