# Common environment variables for both bash and zsh
# This file should use POSIX-compatible syntax
# shellcheck shell=sh

# Editor configuration
export EDITOR="vim"

# Enable color output for various commands
export CLICOLOR=1

# Go development
export GOPATH="${HOME}/src/go"

# Direnv - suppress verbose logging
export DIRENV_LOG_FORMAT=""

# Only set tailscale alias if the binary exists
if [ -x "/Applications/Tailscale.app/Contents/MacOS/Tailscale" ]; then
    alias tailscale="/Applications/Tailscale.app/Contents/MacOS/Tailscale"
fi

# pnpm
export PNPM_HOME="$HOME/.local/share/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac

# alias claude="$HOME/.claude/local/claude"
export PATH="$HOME/.claude/local:$PATH"

# 1Password CLI alias for WSL
if [ -r /proc/version ] && grep -qi microsoft /proc/version 2>/dev/null; then
    alias op="/mnt/c/Users/e/AppData/Local/Microsoft/WinGet/Packages/AgileBits.1Password.CLI_Microsoft.Winget.Source_8wekyb3d8bbwe/op.exe"
fi

# AppleScript documentation generator default path
export GENERATE_APPLESCRIPT_DOCS_PATH="$HOME/Documents/PersonalVault/Documentation/Generated/AppleScriptDocs"
