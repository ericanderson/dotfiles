#!/bin/bash

AUTHORS_PATH="$HOME/.gitsupport"

OUTFILE=`mktemp -t blah.XXXXXXX`

/usr/local/bin/wget --no-check-certificate https://git/authors.txt -O $AUTHORS_PATH/authors.tmp &> OUTFILE

if [ "$?" != '0' ]; then
	echo "ERROR!"
	cat OUTFILE
else
	mv $AUTHORS_PATH/authors.tmp $AUTHORS_PATH/authors.txt && touch $AUTHORS_PATH/authors.txt
fi